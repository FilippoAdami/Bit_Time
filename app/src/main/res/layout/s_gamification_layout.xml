<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tipo_di_gamification"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            style="@style/TitleText"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:text="@string/bonus_malus"
                    style="@style/NormalText"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="@string/solo_bonus"
                    style="@style/NormalText"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/icone_bonus_malus"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            style="@style/TitleText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="50dp">
                <ImageView
                    android:id="@+id/PositiveIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/positive_icon"/>
                <Spinner
                    android:id="@+id/iconSpinner1"
                    android:layout_width="100dp"
                    android:padding="13dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="50dp">
                <ImageView
                    android:id="@+id/NegativeIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/negativeicon"/>
                <Spinner
                    android:id="@+id/iconSpinner2"
                    android:layout_width="100dp"
                    android:padding="13dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/punteggi"
            android:textAlignment="center"
            android:paddingTop="16dp"
            android:layout_marginBottom="8dp"
            style="@style/TitleText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/largo_anticipo"
                    style="@style/RegularText"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/LA_descrizione"
                    style="@style/SmallText"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/timePoints1"
                    android:layout_width="match_parent"
                    android:hint="@string/default_point_value"
                    android:autofillHints="points"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/primary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/RegularText"
                        android:text="@string/Anticipo" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/A_descrizione"
                        style="@style/SmallText"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/timePoints2"
                    android:layout_width="match_parent"
                    android:hint="@string/default_point_value"
                    android:autofillHints="points"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/primary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/RegularText"
                        android:text="@string/OnTime" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/OT_descrizione"
                        style="@style/SmallText"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/timePoints3"
                    android:layout_width="match_parent"
                    android:hint="@string/default_point_value"
                    android:autofillHints="points"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/primary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/RegularText"
                        android:text="@string/Late" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/L_descrizione"
                        style="@style/SmallText"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/timePoints4"
                    android:layout_width="match_parent"
                    android:hint="@string/default_point_value"
                    android:autofillHints="points"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/primary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/RegularText"
                        android:text="@string/SeverelyLate" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/SL_descrizione"
                        style="@style/SmallText"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/timePoints5"
                    android:layout_width="match_parent"
                    android:hint="@string/default_point_value"
                    android:autofillHints="points"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/primary"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/RegularText"
                        android:text="@string/Extremely_Late" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/EL_descrizione"
                        style=""/>
                </LinearLayout>

                <EditText
                    android:id="@+id/timePoints6"
                    android:layout_width="match_parent"
                    android:hint="@string/default_point_value"
                    android:autofillHints="points"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/primary"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_marginTop="15dp"
            android:text="@string/save"
            style="@style/SubmitButton"/>

    </LinearLayout>
</ScrollView>
