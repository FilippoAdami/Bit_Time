<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activityIcon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:src="@drawable/image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#C55353"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelName"
                style="@style/RegularText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:gravity="start|center_vertical"
                android:text="@string/name"
                android:textAlignment="viewStart"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelTime"
                style="@style/NormalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|start|center_vertical"
                android:text="@string/timeB"
                android:textAlignment="textStart" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/modifyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/action_button"
            android:paddingVertical="15dp"
            android:src="@android:drawable/btn_star" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1.5"
            android:background="@drawable/red_action_button"
            android:paddingVertical="15dp"
            android:src="@android:drawable/btn_star" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subtaskLabel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TaskName" />

        <TextView
            android:id="@+id/subtaskLabel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TaskName" />

        <TextView
            android:id="@+id/subtaskLabel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TaskName" />

        <TextView
            android:id="@+id/subtaskLabel4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TaskName" />

        <TextView
            android:id="@+id/subtaskLabel5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TaskName" />
    </LinearLayout>
</LinearLayout>