<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Theme 1 -->
    <style name="BWTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorSurface">@color/primary</item>
    </style>

    <!-- Theme 2 -->
    <style name="PastelTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pastel_yellow</item>
        <item name="colorPrimaryDark">@color/pastel_red</item>
        <item name="colorSecondaryVariant">@color/pastel_purple</item>
        <item name="colorSecondary">@color/pastel_green</item>
        <item name="colorSurface">@color/primary</item>
    </style>

    <!-- Theme 3 -->
    <style name="VividTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSurface">@color/primary</item>
    </style>

    <!-- Theme 4 -->
    <style name="EarthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/earth_yellow</item>
        <item name="colorPrimaryDark">@color/earth_red</item>
        <item name="colorSecondaryVariant">@color/earth_purple</item>
        <item name="colorSecondary">@color/earth_green</item>
        <item name="colorSurface">@color/primary</item>
    </style>

    <style name="MyStyledButton">
        <item name="android:background">@drawable/button</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="CaregiverButton">
        <item name="android:background">@drawable/caregiver_button</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@android:color/transparent</item> <!-- Remove the box stroke color -->
        <item name="android:background">@android:color/transparent</item> <!-- Remove the background -->
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">21dp</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>