<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme 1 -->
    <style name="BWTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- Theme 2 -->
    <style name="PastelTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pastel_yellow</item>
        <item name="colorPrimaryDark">@color/pastel_red</item>
        <item name="colorAccent">@color/pastel_purple</item>
        <item name="android:textColorHighlight">@color/pastel_green</item>
    </style>

    <!-- Theme 3 -->
    <style name="VividTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColorPrimary">@color/green</item>
    </style>

    <!-- Theme 4 -->
    <style name="EarthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/earth_yellow</item>
        <item name="colorPrimaryDark">@color/earth_red</item>
        <item name="colorAccent">@color/earth_purple</item>
        <item name="android:textColorPrimary">@color/earth_green</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAppearance">@null</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAppearance">@null</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@null</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAppearance">@null</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:padding">12dp</item>
        <item name="layout_constraintWidth_percent">0.8</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="SectionButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:paddingTop">70dp</item>
        <item name="android:paddingBottom">70dp</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    <style name="ActionButton">
        <item name="android:background">@drawable/action_button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="RedActionButton">
        <item name="android:background">@drawable/red_action_button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="SubmitButton">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAppearance">@null</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">25sp</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="CaregiverButton">
        <item name="android:background">@drawable/caregiver_button</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">21sp</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>